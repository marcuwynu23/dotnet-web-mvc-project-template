@{
    ViewData["Title"] = "Dashboard";
}

<div class="container bg-white p-4">
   <p class="fs-5 fw-bold">Dashboard</p>
   
    <div class="container">
    <div class="row">
        <!-- Occupancy Overview Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Occupancy Overview</h5>
                    <p>Total number of rooms: 20</p>
                    <p>Number of rooms occupied: 15</p>
                    <p>Percentage occupancy rate: 75%</p>
                </div>
            </div>
        </div>
        
        <!-- Financial Overview Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Financial Overview</h5>
                    <p>Total income (rent collected): $5000</p>
                    <p>Total expenses (maintenance, utilities, etc.): $2000</p>
                    <p>Net profit/loss: $3000</p>
                </div>
            </div>
        </div>

        <!-- Maintenance Requests Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Maintenance Requests</h5>
                    <p>Number of pending maintenance requests: 3</p>
                    <p>Average response time for resolving requests: 2 days</p>
                    <p>Graphical representation of maintenance request status: (e.g., pie chart showing pending, in-progress, completed)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tenant Management -->
    <div class="row">
        <!-- Tenant Management Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tenant Management</h5>
                    <p>Total number of tenants: 10</p>
                    <p>Number of active tenants: 8</p>
                    <p>Upcoming lease renewals: 2</p>
                </div>
            </div>
        </div>
        
        <!-- Room Management Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Room Management</h5>
                    <p>Available rooms: 5</p>
                    <p>Room occupancy status: (e.g., pie chart showing occupied vs. available rooms)</p>
                    <p>Revenue generated from room bookings: $2000</p>
                </div>
            </div>
        </div>

        <!-- Payment Status Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment Status</h5>
                    <p>Number of pending rent payments: 2</p>
                    <p>Rent payment trends: (e.g., comparison of current month's rent collection with previous months)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Communication -->
    <div class="row">
        <!-- Communication Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Communication</h5>
                    <p>Recent announcements or news for tenants: New laundry facilities available!</p>
                    <p>Number of unread tenant messages: 5</p>
                </div>
            </div>
        </div>

        <!-- Performance Metrics Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Performance Metrics</h5>
                    <p>Occupancy rate trend over time: <a href="#">View chart</a></p>
                    <p>Revenue trend over time: <a href="#">View chart</a></p>
                    <p>Maintenance request resolution time trend: <a href="#">View chart</a></p>
                </div>
            </div>
        </div>

        <!-- Upcoming Events Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <p>Lease renewal dates: 1st March, 2024</p>
                    <p>Maintenance schedule: Quarterly maintenance on 5th March, 2024</p>
                    <p>Special events or promotions: Open house event on 10th March, 2024</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row">
        <!-- Quick Links Card -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Links</h5>
                    <ul>
                        <li><a href="#">Tenant Management</a></li>
                        <li><a href="#">Room Management</a></li>
                        <li><a href="#">Maintenance Requests</a></li>
                        <!-- Add more quick links as needed -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
